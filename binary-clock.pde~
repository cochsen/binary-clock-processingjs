Digit s1, s2, s4, s8, s16, s32, 
      m1, m2, m4, m8, m16, m32, 
      h1, h2, h4, h8, h16;

color BG = color(40, 40, 40);
color ON = color(0, 255, 0);
color LABEL = color(225, 225, 225);

void setup() {
 size(384, 512);
 
 s1 = new Digit(260, 370, 90, 65, BG, ON);
 m1 = new Digit(165, 370, 90, 65, BG, ON);
 h1 = new Digit(70, 370, 90, 65, BG, ON);
  
 s2 = new Digit(260, 300, 90, 65, BG, ON);
 m2 = new Digit(165, 300, 90, 65, BG, ON);
 h2 = new Digit(70, 300, 90, 65, BG, ON); 
  
 s4 = new Digit(260, 230, 90, 65, BG, ON);
 m4 = new Digit(165, 230, 90, 65, BG, ON);
 h4 = new Digit(70, 230, 90, 65, BG, ON); 
  
 s8 = new Digit(260, 160, 90, 65, BG, ON);
 m8 = new Digit(165, 160, 90, 65, BG, ON);
 h8 = new Digit(70, 160, 90, 65, BG, ON);
 
 s16 = new Digit(260, 90, 90, 65, BG, ON);
 m16 = new Digit(165, 90, 90, 65, BG, ON);
 h16 = new Digit(70, 90, 90, 65, BG, ON); 
  
 s32 = new Digit(260, 20, 90, 65, BG, ON);
 m32 = new Digit(165, 20, 90, 65, BG, ON); 

}

void draw() {
 background(40, 40, 40); 
 
 int sec = second() + 1;
 int min = minute() + 1; 
 int hr = hour() + 1;
  
 int sec1 = int((second() + 1) % 2);
 int sec2 = int((((((second() + 1) % 32) % 16) % 8) % 4) / 2);
 int sec4 = int(((((second() + 1) % 32) % 16) % 8) / 4);
 int sec8 = int((((second() + 1) % 32) % 16) / 8);
 int sec16 = int(((second() + 1) % 32) / 16);
 int sec32 = int((second() + 1)/32);

 int min1 = int((minute()) % 2);
 int min2 = int((((((minute()) % 32) % 16) % 8) % 4) / 2);
 int min4 = int(((((minute()) % 32) % 16) % 8) / 4);
 int min8 = int((((minute()) % 32) % 16) / 8);
 int min16 = int(((minute()) % 32) / 16);
 int min32 = int((minute())/32);
  
 int hr1 = int((hour()) % 2);
 int hr2 = int((((((hour()) % 32) % 16) % 8) % 4) / 2);
 int hr4 = int(((((hour()) % 32) % 16) % 8) / 4);
 int hr8 = int((((hour()) % 32) % 16) / 8);
 int hr16 = int(((hour()) % 32) / 16);
  
 s1.update(sec1);
 s2.update(sec2);
 s4.update(sec4);
 s8.update(sec8);
 s16.update(sec16);
 s32.update(sec32);
  
 m1.update(min1);
 m2.update(min2);
 m4.update(min4);
 m8.update(min8);
 m16.update(min16);
 m32.update(min32);
  
 h1.update(hr1);
 h2.update(hr2);
 h4.update(hr4);
 h8.update(hr8);
 h16.update(hr16);
 
 fill(LABEL);
 text("s", 305, 465);
 text("m", 210, 465);
 text("h", 115, 465);
 text("32", 35, 50);
 text("16", 35, 120);
 text("8", 35, 190);
 text("4", 35, 260);
 text("2", 35, 330);
 text("1", 35, 400);
 fill(ON);
}

class Digit {
  float x, y, w, h;
  color off, on;
  
  Digit(float x, float y, float w, float h, color off, color on) { 
    this.x = x; 
    this.y = y;
    this.w = w; 
    this.h = h;
    this.off = off;
    this.on = on;
  }
  
    void update(int bin) {
    int b = bin;
    if (b == 1) {
      noStroke();
      rect(this.x, this.y, this.w, this.h); 
      fill(this.on);
    }   
  }
}

